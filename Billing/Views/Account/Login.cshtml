@model LoginModel

<h2>Вход на сайт</h2>

<a asp-action="RegisterClient" asp-controller="Account">Регистрация</a>

@if(ViewData.ModelState["GlobalError"] != null && ViewData.ModelState["GlobalError"].Errors.Any())
{
	<div class="form-group">
		<span class="text-danger">@Html.ValidationMessageFor(x => x.GlobalError)</span>
	</div>
}

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
	<div>
		<div class="form-group">
			<label asp-for="Email">Введите Email</label>
			<input type="text" asp-for="Email"/>
			<span asp-validation-for="Email" class="text-danger" />
		</div>
		<div class="form-group">
			<label asp-for="Password">Введите пароль</label>
			<input asp-for="Password" type="password"/>
			<span asp-validation-for="Password" class="text-danger" />
		</div>
		<div class="form-group">
			<input type="submit" value="Войти" class="btn" />
		</div>
	</div>
</form>