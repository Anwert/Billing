@model FavourModel
@{
	ViewBag.Title = "Favour";
}

<partial name="_ManagerMenuPartial" />

<div class="container">
	
	<h2>Услуга</h2>
	
	<a href='javascript:history.go(-1)'>Назад</a>
	
	@if(ViewData.ModelState["GlobalError"] != null && ViewData.ModelState["GlobalError"].Errors.Any())
	{
		<div class="form-group">
			<span class="text-danger">@Html.ValidationMessageFor(x => x.GlobalError)</span>
		</div>
	}
	
	<form asp-action="EditFavour" asp-controller="Manager" asp-anti-forgery="true">
		<div>
			<input asp-for="Id" type="hidden" value="@Model.Id" />
			<div>
				<label asp-for="Name">Название</label><br/>
				<input type="text" asp-for="Name" value="@Model.Name"/>
				<span asp-validation-for="Name" class="text-danger"/>
			</div>
			<div>
				<label asp-for="Cost">Цена</label><br/>
				<input type="text" asp-for="Cost" value="@Model.Cost"/>
				<span asp-validation-for="Cost" class="text-danger"/>
			</div>
			<br/>
			<div >
				<input class="btn btn-secondary" type="submit" value="Обновить услугу"/>
			</div>
		</div>
	</form>
	
</div>