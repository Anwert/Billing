<div>Hello manager @User.Identity.Name!</div>

@model IEnumerable<Contract>

<h2>Contracts</h2>
<p>
	@* @Html.ActionLink("Create New", "CreateCustomer", "ControllerName") *@
</p>
<table>
	<tr>

		<th>
			@Html.DisplayNameFor(model => model.Id)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Manager.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Client.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Favour.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Status.Name)
		</th>
	</tr>

	@foreach (var contract in Model)
	{    
		<tr>           
			<td>
				@contract.Id
			</td>
			<td>
				@contract.Manager.Name
			</td>
			<td>
				@contract.Client.Name
			</td>
			<td>
				@contract.Favour.Name
			</td>
			<td>
				@contract.Status.Name
			</td>

			<td>                        

				@* @Html.ActionLink("Edit |", "UpdateCustomer", new { id =  item.Id})  *@
				@* @Html.ActionLink("Details", "Details", new { id =  item.Id})  *@
				@* @Html.ActionLink("Delete", "Delete", new { id =  item.Id})                       *@
			</td>           
		</tr>
	}
</table>


