@model UserModel
@{
	ViewBag.Title	= "Create client";
}

<partial name="_ManagerMenuPartial" />

<div class="container body-content">
	
	<h2>Добавление клиента</h2>
	<br />
	
	@if(ViewData.ModelState["GlobalError"] != null && ViewData.ModelState["GlobalError"].Errors.Any())
	{
		<div class="form-group">
			<span class="text-danger">@Html.ValidationMessageFor(x => x.GlobalError)</span>
		</div>
	}
	
	<form asp-action="CreateClient" asp-controller="Manager" asp-anti-forgery="true">
		<div>
			<div>
				<label asp-for="Name">Введите имя</label><br/>
				<input type="text" asp-for="Name"/>
				<span asp-validation-for="Name" class="text-danger" />
			</div>
			<div>
				<label asp-for="Contacts">Введите контактную информацию</label><br/>
				<input type="text" asp-for="Contacts"/>
				<span asp-validation-for="Contacts" class="text-danger" />
			</div>
			<div>
				<label asp-for="Password">Введите пароль</label><br/>
				<input asp-for="Password" type="password"/>
				<span asp-validation-for="Password" class="text-danger" />
			</div>
			<div>
				<label asp-for="ConfirmPassword">Повторите пароль</label><br/>
				<input asp-for="ConfirmPassword" type="password"/>
				<span asp-validation-for="ConfirmPassword" class="text-danger" />
			</div>
			<br />
			<div>
				<input class="btn btn-secondary" type="submit" value="Добавить" />
				<a href='javascript:history.go(-1)'>Отмена</a>
			</div>
		</div>
	</form>
	
</div>