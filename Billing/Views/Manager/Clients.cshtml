@model IEnumerable<User>
@{
	ViewBag.Title = "Clients";
}

<partial name="_ManagerMenuPartial" />

<h2>Клиенты</h2>
<p>
	@Html.ActionLink("Добавить клиента", "CreateClient", "Manager")
</p>
<table>
	<thead>
		<tr>
			<th>Id</th>
			<th>Имя</th>
			<th>Контакты</th>
		</tr>
	</thead>
	
	<tbody>
		@foreach (var client in Model)
		{
			<tr>
				<td>
					@client.Id
				</td>
				<td>
					@client.Name
				</td>
				<td>
					@client.Contacts
				</td>
				@* 			<td> *@
				@* 				@Html.DropDownList(nameof(Status), new SelectList(statuses, nameof(Status.Id), *@
				@* 					nameof(Status.Name), contract.Status.Id),new { @class="status" }) *@
				@* 			</td> *@
			</tr>
		}
	</tbody>

</table>

