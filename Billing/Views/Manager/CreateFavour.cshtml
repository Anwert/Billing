@model FavourModel
@{
	ViewBag.Title	= "Create favour";
}

<partial name="_ManagerMenuPartial" />

<div class="container body-content">
	
	<h2>Добавление услуги</h2>
	<br />
	
	@if(ViewData.ModelState["GlobalError"] != null && ViewData.ModelState["GlobalError"].Errors.Any())
	{
		<div class="form-group">
			<span class="text-danger">@Html.ValidationMessageFor(x => x.GlobalError)</span>
		</div>
	}
	
	<form asp-action="CreateFavour" asp-controller="Manager" asp-anti-forgery="true">
		<div>
			<div>
				<label asp-for="Name">Введите название</label><br/>
				<input type="text" asp-for="Name"/>
				<span asp-validation-for="Name" class="text-danger" />
			</div>
			<div>
				<label asp-for="Name">Введите цену</label><br/>
				<input type="text" asp-for="Cost"/>
				<span asp-validation-for="Cost" class="text-danger" />
			</div>
			<br />
			<div>
				<input class="btn btn-secondary" type="submit" value="Добавить" />
				<a href='javascript:history.go(-1)'>Отмена</a>
			</div>
		</div>
	</form>
	
</div>